.accordion-heading > a {
  color:#0088cc;
  text-decoration: none;
  border:1px solid #ddd;
  border-radius:4px 4px 4px 4px;
  box-shadow:0 6px 6px -3px rgba(0,0,0,0.3);
  /*text-shadow:0 1px #fff;
  background-color: #0066CC;*/
  -webkit-border-radius: 5px;
     -moz-border-radius: 5px;
          border-radius: 5px;
}
.accordion-heading > a:hover,a:active,a:focus {
  color:#fff;
  text-decoration: none;
  /*background-color: #0066CC;*/
  background-image:-webkit-linear-gradient(top,#08c,#0077b3);
  background:url("/assets/img/header-bg.png") repeat-x;
}


.accordion-inner > a {
  /*padding:9px 15px;*/
  line-height:20px;
  color:#0088cc;
  display:block;
  -webkit-border-radius: 5px;
     -moz-border-radius: 5px;
          border-radius: 5px;
}
.accordion-inner > a:hover {
  text-decoration: none;
  background-color: #E6E6E6;
  color:#0088cc;
  -webkit-border-radius: 5px;
     -moz-border-radius: 5px;
          border-radius: 5px;
  background-image:-webkit-linear-gradient(top,#08c,#E6E6E6);
  background:url("/assets/img/accordion-inner-background.png") repeat-x;
}

.accordion-inner:hover {
  text-decoration: none;
