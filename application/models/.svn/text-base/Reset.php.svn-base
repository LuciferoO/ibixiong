<?phpclass ResetModel extends Zend_Db_Table {		protected $_db;		public function get_navbars($type)    {  		$this->_db = $this->getAdapter();  		$select = $this->_db->select();  		$select->from('options','*')			->where('option_position = ?','navbar')			->where('option_type = ?','index')				->where('option_status = ?',1);				  		return $this->_db->fetchAll($select);    }		public function get_rightbars()	{		$this->_db = $this->getAdapter();  		$select = $this->_db->select();  		$select->from('options','*')			->where('option_position = ?','rightbar')			->where('option_type = ?','register')			->where('option_status = 1');			  		return $this->_db->fetchAll($select);	}		public function get_userinfo($type,$login)	{		$this->_db = $this->getAdapter();  		$select = $this->_db->select();  		$select->from('users','*')			->where($type.' = ?',$login);			//print_r($select);		return $this->_db->fetchRow($select);	}		public function update_user_info($table,$data=array(),$id) {		$this->_db = $this->getAdapter();		$where = $this->_db->quoteInto('user_id = ?',$id);		$rows_affected = $this->_db->update($table, $data, $where);		return $rows_affected;	}}